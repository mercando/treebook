<div class="page-header">
  <h1>All Statuses</h1>
</div>
<%= link_to "New Status", new_status_path, class: "btn btn-info" %>
<% @statuses.each do |status| %>
<div class="status">
  <strong><%= status.user.profile_name %></strong>
  <p><%= status.content %></p>
  <div class="meta">
    <%= link_to time_ago_in_words(status.created_at) + " ago", status %> 
    <span class="admin">
      &middot <%= link_to "Edit", edit_status_path(status) %> &middot 
      <%= link_to "Delete", status, method: :delete, data: { confirm: "Are your sure you want to delete this status?" } %>
    </span>
  </div>
</div>
<% end %>